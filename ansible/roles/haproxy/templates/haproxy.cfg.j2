# Customize the HAProxy configuration as needed
global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend main
    bind *:80
    default_backend app

backend app
    balance roundrobin
    server   apache1  192.168.0.111:80 check
    server   apache2  192.168.0.112:80 check
    server   apache3  192.168.0.113:80 check
